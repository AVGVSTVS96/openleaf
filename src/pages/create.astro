  <main class="min-h-screen flex flex-col px-6 py-12 max-w-xl mx-auto">
    <header class="mb-8">
      <a href="/" class="text-[#888] no-underline hover:text-black">‚Üê Back</a>
    </header>

    <div class="flex-1">
      <h1 class="text-xl font-bold mb-6 md-h1">Create new vault</h1>
      <CreateVault client:load />
    </div>

    <footer class="pt-8 text-[#888]">
      <p>Created by <a href="https://github.com/AVGVSTVS96" class="text-[#888]">@AVGVSTVS96</a></p>
    </footer>
  </main>
</Layout>
