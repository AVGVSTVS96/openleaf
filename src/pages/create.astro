---
import Layout from '../layouts/Layout.astro';
import { Logo } from '../components/ui/Logo';
import { CreateVault } from '../components/vault/CreateVault';
import { Background } from '../components/layout/Background';
---

<Layout title="Create Vault - OpenLeaf">
  <main class="min-h-screen flex flex-col relative">
    <Background client:load />

    <header class="py-6 px-4 relative z-10">
      <div class="max-w-md mx-auto">
        <a href="/" class="inline-block hover:opacity-80 transition-opacity">
          <Logo size="sm" />
        </a>
      </div>
    </header>

    <div class="flex-1 flex flex-col px-4 relative z-10">
      <div class="max-w-md mx-auto w-full">
        <h1 class="text-2xl font-bold mb-6">Create a new vault</h1>
        <CreateVault client:load />
      </div>
    </div>

    <footer class="text-center py-4 text-sm text-[#6B7280] relative z-10">
      <p>Built with privacy in mind</p>
    </footer>
  </main>
</Layout>
