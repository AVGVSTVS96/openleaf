---
import BackLink from "../components/BackLink.astro";
import { ErrorBoundary } from "../components/ErrorBoundary";
import Footer from "../components/Footer.astro";
import { CreateVault } from "../components/vault/CreateVault";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Create Vault - OpenLeaf">
  <div class="flex-1 flex flex-col gap-12 pt-4">
    <header class="space-y-8">
      <BackLink href="/" />
      <h1 class="text-2xl sm:text-3xl font-bold tracking-tight">
        <span class="text-muted-foreground font-normal">#</span> Create new vault
      </h1>
    </header>

    <ErrorBoundary>
      <CreateVault client:load />
    </ErrorBoundary>
  </div>

  <Footer />
</Layout>
