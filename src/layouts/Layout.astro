---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="End to end encrypted offline markdown notes" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#FAFAFA" />
    <title>{title}</title>
  </head>
  <body class="min-h-screen flex flex-col bg-background">
    <main class="flex-1 w-full flex flex-col px-6 pt-12 max-w-xl mx-auto">
      <slot />
    </main>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
